{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Paths and Aliases */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "*": ["src/types/*"]  // <-- This makes custom type declarations like images.d.ts work
    }
  },
  "include": [
    "src",
    "src/types/**/*.d.ts"  // <-- Explicitly include all type declaration files
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
